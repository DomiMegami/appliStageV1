<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="dominique.fr.jv_activity.MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/categories_place"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="20dp"
        >
        <CheckBox
            android:id="@+id/cb_categorie_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categorie_1"
            android:textSize="20sp"
            android:checked="true"
            android:gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/cb_categorie_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categorie_2"
            android:textSize="20sp"
            android:checked="true"
            android:gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/cb_categorie_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categorie_4"
            android:textSize="20sp"
            android:checked="true"
            android:gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/cb_categorie_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categorie_3"
            android:textSize="20sp"
            android:checked="true"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/categories_place2"
        android:gravity="center"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="50dp"
        >
        <CheckBox
            android:id="@+id/cb_tri_date_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_aujourd_hui"
            android:textSize="20sp"
            android:checked="true"
            android:gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/cb_tri_date_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_dans_la_semaine"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/cb_tri_date_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_plus_tard"
            android:textSize="20sp"
            android:gravity="center_vertical"/>
    </LinearLayout>
            <ListView
                android:id="@+id/liste1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
</LinearLayout>
