<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dominique.fr.jv_activity.AccueilUserConnectedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rl">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/titre_de_la_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accueil connecte"
            style="@style/Titre_page_rouge_orange_xl"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categories_place2"
            android:gravity="center"
            android:layout_marginLeft="75dp"
            android:layout_marginBottom="50dp"
            >
            <CheckBox
                android:id="@+id/cb_tri_date_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_aujourd_hui"
                android:textSize="20sp"
                android:checked="true"
                android:gravity="center_vertical"/>
            <CheckBox
                android:id="@+id/cb_tri_date_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_dans_la_semaine"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
            <CheckBox
                android:id="@+id/cb_tri_date_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_plus_tard"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <ListView
             android:id="@+id/liste1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
         </ListView>

    </LinearLayout>

</LinearLayout>
