<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/image_article"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/jv"
            />
        <TextView
            android:id="@+id/tv_aff_dates_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/txt_sur_img_top_left"
            android:text="@string/txt_debut_txt_dates"/>
    </FrameLayout>
    <TextView
        android:id="@+id/titre_article"
        style="@style/txt_sur_img_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titre_article"
        />
</LinearLayout>